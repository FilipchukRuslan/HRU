<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <title>@ViewData["Title"] - ПСУ</title>

    <style type="text/css">

        a:hover {
            text-decoration: none;
        }

        .row {
            margin: 0% auto !important;
            padding: 0% !important;
        }


        .myNavbar-stripe {
            background-color: #ff0000;
            height: 1px;
        }

        .container {
            margin: 0% auto !important;
            padding: 0% !important;
        }

        .container-fluid {
            margin: 0% auto !important;
            padding: 0% !important;
        }

        body {
            font-family: Tahoma;
            margin: 0% auto !important;
            padding: 0% !important;
            background: none;
        }

        .clear {
            clear: both;
        }

        .myNavbar-stripe {
            background-color: white;
            height: 1px;
        }

        .footer {
            background-color: rgb(207, 204, 204);
            margin-top: 20px;
        }

        .myBrand-header {
            background: rgba(41, 79, 209, 0.82);
            height: 75px;
        }


        .navbar {
            border-radius: 0px;
            border-style: none;
            height: 52px;
            font-weight: 500;
            font-family: Tahoma;
            font-size: 21px;
            background-color: rgba(41, 79, 209, 0.82);
            text-align: center;
        }


        .myBrand {
            border-radius: 0px;
            border-style: none;
            height: 52px;
            font-family: Tahoma;
            font-size: 21px;
            background-color: rgb(64, 64, 64);
        }

        .center {
            display: flex;
            align-items: center;
        }
    </style>
</head>

<body>
    <div class="myBrand-header"></div>
    <div class="myNavbar-stripe"></div>
    <div class="container-fluid">
        <div class="row">
            <nav class="nav navbar navbar-inverse">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="container center">
                    <div class="row">
                        <div class="navbar-collapse collapse center">
                            <ul class="nav navbar-nav center">
                                <li><a style="color:white;" asp-controller="News" asp-action="News">НОВОСТИ</a></li>
                                <li><a style="color:white;" asp-controller="Projects" asp-action="Index">ПРОЕКТЫ</a></li>
                                <li><a style="color:white;" asp-controller="AboutUnion" asp-action="Index">О СОЮЗЕ</a></li>
                                <li><a style="color:white;" asp-controller="Partners" asp-action="Index">ПАРТНЕРЫ</a></li>
                                <li><a style="color:white;" asp-controller="Media" asp-action="Index">СМИ О НАС</a></li>
                                <li><a style="color:white;" asp-controller="Contacts" asp-action="Index">КОНТАКТЫ</a></li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>@Html.ActionLink(@User.Identity.Name, "Index", "User")</li>

                                    <li>
                                        <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
                                            <button type="submit" style="" class="btn btn-link navbar-btn navbar-link deff ">
                                                Выйти
                                            </button>
                                        </form>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                
            </nav>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()

    </div>


    <script src="~/js/modernizr.custom.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/classie.js"></script>
    <script src="~/js/site.js"></script>



    @RenderSection("Scripts", required: false)
</body>
</html>
