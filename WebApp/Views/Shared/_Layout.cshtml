<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500" rel="stylesheet">
    <title>Правозахисна спілка України</title>
    <link href="~/css/layout.css" rel="stylesheet" />
</head>
<body>
    <div class="myBrand-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1">

                    <a asp-controller="Home" asp-action="Index"><img class="brand" src="~/images/brand.png" /></a>

                </div>
            </div>
        </div>
    </div>
    <div class="myNavbar-stripe"></div>
    <nav class="nav navbar navbar-inverse">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1">

                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav center">
                            <li><a class="nav-li" asp-controller="News" asp-action="News">НОВОСТИ</a></li>
                            <li><a class="nav-li" asp-controller="Projects" asp-action="Index">ПРОЕКТЫ</a></li>
                            <li><a class="nav-li" asp-controller="Video" asp-action="Index">ВИДЕО</a></li>
                            <li><a class="nav-li" asp-controller="AboutUnion" asp-action="Index">О СОЮЗЕ</a></li>
                            <li><a class="nav-li" asp-controller="Media" asp-action="Index">СМИ О НАС</a></li>
                            <li><a class="nav-li" asp-controller="Contacts" asp-action="Index">КОНТАКТЫ</a></li>

                        </ul>

                    </div>
                    <ul class="nav navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a class="nav-li" asp-controller="Admin" asp-action="Carousel">слайдер</a></li>
                            <li><a class="nav-li" asp-controller="Admin" asp-action="News">новости</a></li>
                            <li><a class="nav-li" asp-controller="Admin" asp-action="Projects">проекты</a></li>
                            <li><a class="nav-li" asp-controller="Admin" asp-action="Video">видео</a></li>
                            <li><a class="nav-li" asp-controller="Admin" asp-action="AboutUnion">о союзе</a></li>
                            <li><a class="nav-li" asp-controller="Admin" asp-action="Media">сми о нас</a></li>
                            <li><a class="nav-li" asp-controller="Admin" asp-action="FaceBook">facebook</a></li>
                            <li class="nav-li">
                                <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
                                    <input class="navbar-link" type="submit" value="Выйти" />
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>

        </div>
    </nav>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-lg-offset-1">
                    <div class="foot col-lg-4">
                        <a class="nav-li" asp-controller="Home" asp-action="Index">
                            <img style="width:260px;" src="~/images/Logo.jpg" />
                        </a>
                    </div>
                    <div class="foot col-lg-3">
                        <a class="nav-li-foot" asp-controller="News" asp-action="News">НОВОСТИ</a>
                        <div></div>
                        <a class="nav-li-foot" asp-controller="Projects" asp-action="Index">ПРОЕКТЫ</a>
                        <div></div>
                        <a class="nav-li-foot" asp-controller="Video" asp-action="Index">ВИДЕО</a>
                        <div></div>
                        <a class="nav-li-foot" asp-controller="AboutUnion" asp-action="Index">О СОЮЗЕ</a>
                        <div></div>
                        <a class="nav-li-foot" asp-controller="Media" asp-action="Index">СМИ О НАС</a>
                        <div></div>
                        <a class="nav-li-foot" asp-controller="Contacts" asp-action="Index">КОНТАКТЫ</a>
                    </div>
                    <div class="clear"></div>
                    <div>© 2018 Все права защищены</div>

                </div>
            </div>
        </div>

    </footer>
    <script src="~/js/modernizr.custom.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/classie.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/jquery.tinymce.min.js"></script>
    <script src="~/js/tinymce.min.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
