@model WebApp.ViewModels.StartPageViewModel
@{
    ViewData["Title"] = "Index";
}
<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
<style>

    body {
        font-family: 'Roboto', sans-serif;
        font-size: 15px;
    }


    #preview {
        max-height: 150px;
        min-height: 150px;
        max-width: 220px;
        min-width: 220px;
    }



    li {
        list-style-type: none;
    }

    .listOfNews {
        margin-bottom: 6px;
        font-size: 18px;
    }

    .date {
        color: #414141;
        font-size: 16px;
    }

    .stripe {
        width: 33%;
        height: 30px;
        background-color: rgba(41, 79, 209, 0.70);
        float: left;
        margin-right: 80px;
        margin-bottom: 30px;
        color: rgb(255, 255, 255);
        font-size: 20px;
        text-align: right;
        font-weight: 500;
        letter-spacing: 3px;
    }

    .decorator {
        width: 35%;
        height: 30px;
        border-top: 30px solid rgb(41, 79, 209);
        border-right: 15px solid transparent;
    }

    .brandHeader {
        background: linear-gradient(180deg, rgb(1, 141, 255), rgb(101, 206, 255));
        height: 75px;
    }

    .brandHeader {
        background: linear-gradient(180deg, rgb(0, 0, 0), rgb(41, 42, 51));
        height: 75px;
    }

    .container-fluid {
        margin: 0% auto;
        padding: 0%;
    }

    .last-news {
        margin: 5px 0px 25px;
        font-size: 25px;
        color: #414141;
        font-weight: 300;
    }

    .newsBlock {
        margin-bottom: 23px;
        font-weight: 400;
        font-size: 18px;
    }

    .blackWraping {
        background-color: black;
        opacity: 0.6;
    }

    .slider {
        max-height: 590px;
        min-height: 590px;
        max-width: 100%;
        min-width: 100%;
    }

    img {
        background-size: cover;
    }

    .clear {
        clear: both;
    }

    .backGr {
        text-align: start;
        box-shadow: -5px 0 5px -5px #333, 5px 0 5px -5px #333;
    }

    .faceBook {
        background: rgba(144, 252, 206, 0.78);
    }

    .profilePhoto {
        max-height: 110px;
        min-height: 110px;
        max-width: 110px;
        min-width: 110px;
        border-radius: 50px;
    }

    .partners {
        background: rgb(250, 252, 255);
        text-align: start;
        padding: 10px;
        border: 1px solid #eeeeef;
        border-bottom: 2px solid rgba(53, 142, 165, 0.60);
        box-shadow: 0 -2px 0.375em -0.125em #808080;
    }

    .crew-img {
        max-width: 200px;
        min-width: 200px;
        min-height: 200px;
        max-height: 200px;
        margin-right: 20px;
        float: left;
    }

    .descr {
        background: rgb(250, 252, 255);
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-10 col-lg-offset-1 backGr">
            <br />
            <div class="col-lg-10 col-lg-offset-1">
                <div class="row">
                    <h2>О союзе</h2>
                </div>
                <hr />
                <br />
                @if (User.IsInRole("Administrator"))
                {
                    <a href='@Url.Action("AboutUnion", "Admin")' class="alert-warning">редактировать</a>

                }
                @foreach (var i in Model.AboutUnionLst)
                {
                    <div class="descr">
                        <h4>Правозащитный союз Украины</h4>
                        @Html.Raw(i.Union)
                    </div>
                    <br />
                    <div class="descr">
                        <h4>Миссия союза</h4>
                        @Html.Raw(i.Mission)
                    </div>
                    <br />
                    <div class="descr">
                        <h4>Цели и задачи</h4>
                        @Html.Raw(i.Goals)
                    </div>
                    <br />
                    <div>
                        <h4>Состав Союза </h4>
                        <br />

                        @if (Model.PartnersLst.Count() > 0)
                        {
                            @foreach (var partners in Model.PartnersLst)
                            {
                                @if (partners.isCrew)
                                {
                                    <div class="partners">
                                        <img class="crew-img" src="@Model.ImagesLst.Where(e => e.Id == @partners.Image_Id).FirstOrDefault().ImagePath" />
                                        <p>@partners.ParnerAbout</p>
                                        <div class="clear"></div>
                                    </div>
                                    @if (User.IsInRole("Administrator"))
                                    {
                                        <a class="btn btn-default" href='@Url.Action("DeletePartner", "AboutUnion", new { id = @partners.Id }, null)'>Удалить</a>
                                    }

                                    <br />
                                    @if (User.IsInRole("Administrator"))
                                    {
                                        <a href='@Url.Action("AboutUnion", "Admin", new { id = @partners.Id }, null )' class="alert-warning">редактировать</a>

                                    }

                                }
                            }
                        }
                    </div>
                    <br />
                    <div>
                        <h4>Партнеры</h4>
                        <br />
                        @if (Model.PartnersLst.Count() > 0)
                        {
                            @foreach (var partners in Model.PartnersLst)
                            {
                                @if (!partners.isCrew)
                                {
                                    <div class="partners">
                                        <img class="crew-img" src="@Model.ImagesLst.Where(e => e.Id == @partners.Image_Id).FirstOrDefault().ImagePath" />
                                        <p>@partners.ParnerAbout</p>
                                        <div class="clear"></div>
                                    </div>
                                    @if (User.IsInRole("Administrator"))
                                    {
                                        <a class="btn btn-default" href='@Url.Action("DeleteCrew", "AboutUnion", new { id = @partners.Id }, null)'>Удалить</a>
                                    }
                                    <br />
                                    @if (User.IsInRole("Administrator"))
                                    {
                                        <a href='@Url.Action("AboutUnion", "Admin", new { id = @partners.Id }, null)' class="alert-warning">редактировать</a>

                                    }
                                }
                            }
                        }
                    </div>
                    <br />
                }

            </div>
        </div>
    </div>
</div>
