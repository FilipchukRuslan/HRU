@model WebApp.ViewModels.ShowNewsViewModel
@{
    ViewData["Title"] = "ShowNews";
}
<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
<style>
    body {
        font-size: 18px;
        font-family: 'Roboto', sans-serif;
    }

    img {
        background-size: contain;
        background-size: cover;
        max-width: 650px;
        max-height: 450px;
    }

    .backGr {
        margin-top: 20px;
        background: rgb(245, 246, 247);
        text-align: center;
        max-width: 650px;
        box-shadow: 0 0 5px #808080;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-1 ">
            <div class="row backGr">
                <h3>@Model.Article.Title</h3>
                <hr />
                <img style="margin-bottom:10px;" src="@Model.Image.ImagePath" /><br />
                @Html.Raw(Model.Article.Text)<br />
            </div>
        </div>
    </div>
</div>