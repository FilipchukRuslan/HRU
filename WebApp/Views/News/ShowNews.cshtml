@model WebApp.ViewModels.ShowNewsViewModel
@{
    ViewData["Title"] = "ShowNews";
}
<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
<style>
    body {
        font-size: 16px;
        font-family: 'Roboto', sans-serif;
    }

    .backGr-inner img {
        background-size: contain;
        background-size: cover;
        max-width: 700px;
        min-width: 700px;
        max-height: 450px;
        margin-bottom: 10px;
    }

    .backGr {
        margin-top: 20px;
        text-align: center;
        box-shadow: -5px 0 5px -5px #333, 5px 0 5px -5px #333;
        padding: 10px;
    }

    .backGr-inner {
        text-align: justify;
        max-width: 700px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-10 col-lg-offset-1 backGr">
            <div class="row backGr-inner">
                <h3>@Model.Article.Title</h3>
                <hr />@if (User.IsInRole("Administrator"))
                {
                    <a href='@Url.Action("News", "Admin", new { id = @Model.Article.Id }, null)' class="alert-warning">редактировать</a>

                }
                <img src="@Model.Image.ImagePath" /><br />
                @Html.Raw(Model.Article.Text)<br />
            </div>
        </div>
    </div>
</div>